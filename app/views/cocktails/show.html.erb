<div>
  <% if @cocktail.photos.attached? %>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="<%= url_for(@cocktail.photos[0]) %>" style="height: 832px;" alt="">
        <div class="text-block picture"><h1 class="text-center text-uppercase font-weight-bold text-white"> <%= @cocktail.name.upcase%></h1> </div>
      </div>
      <% @cocktail.photos[1..-1].each do |photo| %>
        <div class="carousel-item">
          <img src="<%= url_for(photo) %>" style="height: 832px;" alt="">
          <div class="text-block picture"><h1 class="text-center text-uppercase font-weight-bold text-white"> <%= @cocktail.name.upcase%></h1> </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <% else %>
  <div class="bg-secondary picture" style="height: 200px;"> <h3 class="text-center text-uppercase font-weight-bold text-white">
    <%= @cocktail.name %>
  </div>
<% end %>

  </br></br>

  <div class="d-flex justify-content-between">
    <div>
      <h3>Ingredients</h3></br>
    </div>

    <div>
      <h3>Doses</h3></br>
    </div>
  </div>

  <% @cocktail.doses.each do |dose| %>
    <div class="d-flex justify-content-between">
      <div>
        <%= dose.ingredient.name.capitalize %>
      </div>
      <div>
        <%= dose.description %>
        <span><%= link_to cocktail_dose_path(dose), class: 'text-info',
                  method: :delete,
                  data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-trash"></i>
                  <% end %>
        </span>
      </div>
    </div>
  <% end %>
  </br></br>

  <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-info" %>
</div>
